
@model Ecommerce.Models.ViewModel.UpdateUserViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<div>
    <h4>Change your account settings</h4>
    <hr>
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item"><a class="nav-link active" id="profile" href="/Account/edit">Profile</a></li>
                <li class="nav-item"><a class="nav-link" id="email" href="/Identity/Account/Manage/Email">Email</a></li>
                <li class="nav-item"><a class="nav-link" id="change-password" href="/Identity/Account/Manage/ChangePassword">Password</a></li>
                <li class="nav-item"><a class="nav-link" id="two-factor" href="/Identity/Account/Manage/TwoFactorAuthentication">Two-factor authentication</a></li>
                <li class="nav-item"><a class="nav-link" id="personal-data" href="/Identity/Account/Manage/PersonalData">Personal data</a></li>
            </ul>

        </div>
        <div class="col-md-9">

            <h4>Profile</h4>


            <div class="row">
            
                <div class="col-10  ">

                    <div class="logform  shadow-lg py-5 pl-4 pr-5 bg-white rounded">
                        <br />
                        <table>
                            <tr>
                                <td>
                                    <div class="card-body">
                                        @ViewBag.success
                                        <form asp-action="Edit">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="FirstName"></label>
                                                        <input asp-for="FirstName" value="@ViewBag.Firstname" class="form-control" />
                                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="LastName"></label>
                                                        <input asp-for="LastName" value="@ViewBag.Lastname" class="form-control" />
                                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label asp-for="StreetAddress"></label>
                                                        <input asp-for="StreetAddress" value="@ViewBag.StreetAddress" class="form-control" />
                                                        <span asp-validation-for="StreetAddress" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label asp-for="City"></label>
                                                        <input asp-for="City" value="@ViewBag.City" class="form-control" />
                                                        <span asp-validation-for="City" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="State"></label>
                                                        <input asp-for="State" value="@ViewBag.State" class="form-control" />
                                                        <span asp-validation-for="State" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="Zipcode"></label>
                                                        <input asp-for="Zipcode" value="@ViewBag.Zipcode" class="form-control" />
                                                        <span asp-validation-for="Zipcode" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="PhoneNumber">Phone</label>
                                                        <input asp-for="PhoneNumber" value="@ViewBag.PhoneNumber" class="form-control" />
                                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                                    </div>
                                                </div>

                                            </div>
                                            <input type="submit" value="Update" class="btn btn-sm btn-primary text-uppercase rounded-0" />
                                        </form>
                                    </div>



                                </td>
                            </tr>
                        </table>

                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
