@model Ecommerce.Models.ViewModel.LoginViewModel
@{
    // ViewBag.Title = "Login";
}
<style>
    .logform {
        margin-top: 30%;
    }
</style>

@ViewBag.Name


<div class="row">
    <div class="col-4">

    </div>
    <div class="col-4  ">

        <div class="logform  shadow-lg py-5 pl-4 pr-5 bg-white rounded">
            <h2 class="text-primary">Login</h2>
            <br />
            <table>
                <tr>
                    <td>
                        <form method="post" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Username">Username:</label>
                                <input asp-for="Username" required/>
                                <span asp-validation-for="Username"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Password">Password :</label>
                                <input asp-for="Password" required/>
                                <span asp-validation-for="Password"></span>
                            </div>

                            <div class="" form-group form-check"">
                                <label asp-for="RememberMe"></label>
                                <input asp-for="RememberMe" />
                                <span asp-validation-for="RememberMe"></span>
                            </div>
                            <br />
                            <input type="submit" class="btn btn-primary" value="Login" />
                        </form>



                    </td>
                </tr>
            </table>

        </div>
    </div>


    <div class="col-4">

    </div>
</div>

