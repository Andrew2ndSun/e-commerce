@{
    ViewData["Title"] = "Success";
}

<style>
    .Success_Order {
        background-color: #eeeeee;
        text-align: center;
        margin-top: 15%;
    }
</style>
<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <div class="Success_Order p-5 shadow-lg rounded">
            <h3 class="text-success">Payment Successful!</h3>
            <hr />
            <svg class="bi bi-check-circle text-success" width="3em" height="3em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M15.354 2.646a.5.5 0 010 .708l-7 7a.5.5 0 01-.708 0l-3-3a.5.5 0 11.708-.708L8 9.293l6.646-6.647a.5.5 0 01.708 0z" clip-rule="evenodd" />
                <path fill-rule="evenodd" d="M8 2.5A5.5 5.5 0 1013.5 8a.5.5 0 011 0 6.5 6.5 0 11-3.25-5.63.5.5 0 11-.5.865A5.472 5.472 0 008 2.5z" clip-rule="evenodd" />
            </svg>
            <p>Thank you, your payment has been successful. Please check your email for confirmation</p>
            <hr>
            <p>If you have any other question </p>
            <a asp-controller="home" asp-action="Contact" class="btn btn-success">Contact Us</a>
            <br />
            <br />


            <a asp-controller="home" asp-action="index">Continue Shopping</a>
        </div>

    </div>
    <div class="col-4"></div>
</div>

